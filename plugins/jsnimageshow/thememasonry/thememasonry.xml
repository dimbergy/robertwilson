        <language tag="ja-JP">languages/ja-JP.plg_jsnimageshow_thememasonry.ini</language>
        <language tag="nl-NL">languages/nl-NL.plg_jsnimageshow_thememasonry.ini</language>
        <language tag="pt-BR">languages/pt-BR.plg_jsnimageshow_thememasonry.ini</language>
        <language tag="ru-RU">languages/ru-RU.plg_jsnimageshow_thememasonry.ini</language>
    </languages>
