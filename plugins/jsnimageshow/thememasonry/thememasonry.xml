    <author>JoomlaShine.com</author>
    <authorEmail>admin@joomlashine.com</authorEmail>
    <authorUrl>http://www.joomlashine.com</authorUrl>
    <description>JSN IMAGESHOW SHOWCASE THEME MASONRY PLUGIN</description>
    <files>
        <filename plugin="thememasonry">thememasonry.php</filename>
        <filename plugin="thememasonry">install.mysql.sql</filename>
        <filename plugin="thememasonry">install.sqlsrv.sql</filename>
        <filename plugin="thememasonry">uninstall.mysql.sql</filename>
        <filename plugin="thememasonry">uninstall.sqlsrv.sql</filename>
        <filename plugin="thememasonry">install.class.php</filename>
        <folder>assets</folder>
        <folder>classes</folder>
        <folder>helper</folder>
        <folder>languages</folder>
        <folder>models</folder>
        <folder>sql</folder>
        <folder>tables</folder>
        <folder>views</folder>
    </files>
    <install>
        <sql>
            <file charset="utf8" driver="mysql">install.mysql.sql</file>
            <file charset="utf8" driver="sqlsrv">install.sqlsrv.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file charset="utf8" driver="mysql">uninstall.mysql.sql</file>
            <file charset="utf8" driver="sqlsrv">uninstall.sqlsrv.sql</file>
        </sql>
    </uninstall>
    <scriptfile>install.class.php</scriptfile>
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
            <schemapath type="sqlsrv">sql/updates/sqlsrv</schemapath>
        </schemas>
    </update>
    <languages>
        <language tag="da-DK">languages/da-DK.plg_jsnimageshow_thememasonry.ini</language>
        <language tag="de-DE">languages/de-DE.plg_jsnimageshow_thememasonry.ini</language>
