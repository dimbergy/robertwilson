	<creationDate>05/27/2016</creationDate>
	<copyright>Copyright (c) 2008 - 2013 - JoomlaShine.com</copyright>
	<license>GNU/GPL v2 http://www.gnu.org/licenses/gpl-2.0.html</license>
	<author>JoomlaShine.com</author>
	<authorEmail>admin@joomlashine.com</authorEmail>
	<authorUrl>http://www.joomlashine.com</authorUrl>
	<description>JSN_MODULE_JSN_EASYSLIDER_MODULE</description>
	<files>
		<filename module="mod_easyslider">mod_easyslider.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>assets</folder>
		<folder>languages</folder>
	</files>
	<config>
        <fields name="params">
            <fieldset addfieldpath="/administrator/components/com_easyslider/elements"
                      name="basic">
                <field name="slider_id" type="jsnsliderlist" section="com_easyslider" default="0" label="JSN_MODULE_EASYSLIDER" description="JSN_MODULE_EASYSLIDER_DESC" />

            </fieldset>
            <fieldset addfieldpath="/administrator/components/com_easyslider/elements"
                      name="advanced">
                <field name="moduleclass_sfx" type="text" default=""
                       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

            </fieldset>

        </fields>

	</config>
</extension>