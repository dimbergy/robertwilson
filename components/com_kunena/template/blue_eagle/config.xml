			<option value="white">COM_KUNENA_TEMPLATE_LIGHTBOXCOLOR_WHITE</option>
			<option value="black">COM_KUNENA_TEMPLATE_LIGHTBOXCOLOR_BLACK</option>
		</field>
		<field name="forumHeadercolor" type="color" default=""
		       label="COM_KUNENA_TEMPLATE_FORUM_HEADER_BACKGROUND"
		       description="COM_KUNENA_TEMPLATE_FORUM_HEADER_BACKGROUND_DESC"
